{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ReverseProxy": {
    "Routes": {
      "user-register": {
        "ClusterId": "user-auth-cluster",
        "Match": {
          "Path": "/user-auth/register",
          "Methods": [ "POST" ]
        }
      },
      "user-login": {
        "ClusterId": "user-auth-cluster",
        "Match": {
          "Path": "/user-auth/login",
          "Methods": [ "POST" ]
        }
      },
      "user-get": {
        "ClusterId": "user-auth-cluster",
        "Match": {
          "Path": "/user-auth/users/{**catch-all}",
          "Methods": [ "GET" ]
        }
      },
      "refresh-token": {
        "ClusterId": "user-auth-cluster",
        "Match": {
          "Path": "/user-auth/refresh",
          "Methods": [ "PUT" ]
        },
        "AuthorizationPolicy": "UserAuthPolicy"
      },
      "user-logout": {
        "ClusterId": "user-auth-cluster",
        "Match": {
          "Path": "/user-auth/logout",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "UserAuthPolicy"
      }
    },
    "Clusters": {
      "user-auth-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://userauth.api:8081/api"
          }
        }
      }

    }
  }
}
